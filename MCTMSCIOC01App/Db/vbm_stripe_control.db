record (ao, "MCTVBM01:RH_STRIPE_POSITION_SP") {
   field (DESC, "Motor position for Rh stripe")
   field (SCAN, "Passive")

   field (EGU,  "mm")
   field (PREC, "3")

   field (LOPR, "-25")
   field (HOPR, "-15")
}

record (ao, "MCTVBM01:PT_STRIPE_POSITION_SP") {
   field (DESC, "Motor position for Pt stripe")
   field (SCAN, "Passive")

   field (EGU,  "mm")
   field (PREC, "3")

   field (LOPR, "15")
   field (HOPR, "25")
}

record (bo, "MCTVBM01:STRIPE_SELECTION_CMD") {
   field (DESC, "Select VBM stripe")
   field (SCAN, "Passive")

   field (ZNAM, "Rh")
   field (ONAM, "Pt")

   field (ZSV, "NO_ALARM")
   field (OSV, "NO_ALARM")
}

record (calc, "MCTVBM01:SRIPE_TO_POSITION_CALC") {
   field (DESC, "Stripe to position in mm")
   field (SCAN, "Passive")

   field (EGU,  "mm")
   field (PREC,  "1")
   field (HOPR,  "25")
   field (LOPR,  "-25")

   field (INPA, "MCTVBM01:STRIPE_SELECTION_CMD CP")
   field (INPB, "MCTVBM01:RH_STRIPE_POSITION_SP")
   field (INPC, "MCTVBM01:PT_STRIPE_POSITION_SP")
   field (CALC, "A == 0 ? B : C")
}

# Request to move the motors to move to stripe
#
record (dfanout, "MCTVBM01:MOVE_TO_STRIPE") {

   field (DESC, "Move to stripe")
   field (SCAN, "Passive")

   field (EGU,  "mm")
   field (PREC,  "1")
   field (HOPR,  "25")
   field (LOPR,  "-25")

   field (OMSL, "closed_loop")
   field (DOL,  "MCTVBM01:SRIPE_TO_POSITION_CALC CP")
   
   field (SELM, "All")          

   field (OUTA, "MCTVBM01MOT04 PP")
   field (OUTB, "MCTVBM01MOT05 PP")
}

# Run a lua script function to calculate which stripe
# is currently in use.
#
record (luascript, "MCTVBM01:CURRENT_STRIPE_CALC") {
   field (DESC, "Calculate currently used stripe")
   field (SCAN, ".5 second")

   field (INPA, "MCTVBM01MOT04")
   field (INPB, "MCTVBM01MOT05")
   field (INPC, "MCTVBM01:RH_STRIPE_POSITION_SP")
   field (INPD, "MCTVBM01:PT_STRIPE_POSITION_SP")

   field (CODE, "@vbm_stripe_calc.lua currentStripe()")

   field (OUT, "MCTVBM01:STRIPE_SELECTION_STATUS PP")
}

# Which VBM stripe are we currently on?
#
record (mbbi, "MCTVBM01:STRIPE_SELECTION_STATUS") {
   field (DESC, "Which VBM stripe is in use")
   field (SCAN, "Passive")
   field (PINI, "YES")

   field (SHFT, "0")
   field (UNSV, "MAJOR")

   # Conversions and alarm severities ZR(ST|SV|VL) ... FF(ST|SV|VL)
   #
   field (ZRST, "None")
   field (ZRSV, "MINOR")
   field (ZRVL, "0")

   field (ONST, "Rh")
   field (ONSV, "NO_ALARM")
   field (ONVL, "1")

   field (TWST, "Pt")
   field (TWSV, "NO_ALARM")
   field (TWVL, "2")
}

