record (ao, "MCTMONO01:ENERGY_REQUEST_SP") {
   field (SCAN, "Passive")
   field (PINI, "YES")

   field (EGU,  "keV")
   field (PREC, "2")

   field (LOPR, "8.0")
   field (HOPR, "40.0")
   field (DRVL, "8.0")
   field (DRVH, "40.0")
}

record (bo, "MCTMONO01:ENERGY_USER_MODE_CMD") {
   field (SCAN, "Passive")

   field (PINI, "YES")
   field (VAL, "0")

   field (ZNAM, "Basic")      field (ZSV, "NO_ALARM")
   field (ONAM, "Advanced")   field (OSV, "MINOR")
}

record (bo, "MCTMONO01:ENERGY_CONFIG_VALID_CMD") {
   field (SCAN, "Passive")
   field (PINI, "YES")

   field (ZNAM, "Do nothing")     field (ZSV, "NO_ALARM")
   field (ONAM, "Check config")   field (OSV, "MINOR")

   field (HIGH, "1")
}

record (bi, "MCTMONO01:ENERGY_CONFIG_VALID_STATUS") {
   field (DESC, "")
   field (SCAN, "Passive")

   field (ZNAM, "Invalid")   field (ZSV, "MINOR")
   field (ONAM, "Valid")     field (OSV, "NO_ALARM")
}

record (ao, "MCTMONO01:OFFSET_REQUEST_SP") {
   field (SCAN, "Passive")
   field (PINI, "YES")

   field (DISV, "0")
   field (SDIS, "MCTMONO01:ENERGY_USER_MODE_CMD")

   field (EGU,  "mm")
   field (PREC, "2")

   field (LOPR, "12.5")
   field (HOPR, "23.5")
   field (DRVL, "12.5")
   field (DRVH, "23.5")
}

record (mbbo, "MCTMONO01:STRIPE_REQUEST_CMD") {
   field (SCAN, "Passive")
   field (PINI, "YES")

   field (UNSV, "MAJOR")

   field (ZRVL, "0")   field (ZRST, "Ru/C")   field (ZRSV, "NO_ALARM")
   field (ONVL, "1")   field (ONST, "V/B4C")    field (ONSV, "NO_ALARM")
   field (TWVL, "2")   field (TWST, "W/B4C")   field (TWSV, "NO_ALARM")
}

record (bo, "MCTMONO01:REQUEST_ENERGY_CMD") {
   field (SCAN, "Passive")

   field (ZNAM, "Do nothing")   field (ZSV, "NO_ALARM")
   field (ONAM, "Request E")    field (OSV, "MINOR")

   field (HIGH, "0.5")
}

record (bo, "MCTMONO01:BLOCK_ENERGY_REQUESTS") {
   field (SCAN, "Passive")

   field (ZNAM, "Allowed")   field (ZSV, "NO_ALARM")
   field (ONAM, "Blocked")    field (OSV, "MINOR")
}

# Calculate if any of the motors are moving
#
record (calc, "MCTMONO01:MOVING_MONITOR_CALC") {
   field (DESC, "")
   field (SCAN, "Passive")

   field (INPA, "MCTMONO01MOT01.DMOV CP MS")
   field (INPB, "MCTMONO01MOT02.DMOV CP MS")
   field (INPC, "MCTMONO01MOT03.DMOV CP MS")
   field (INPD, "MCTMONO01MOT04.DMOV CP MS")
   field (INPE, "MCTMONO01MOT05.DMOV CP MS")
   field (INPF, "MCTMONO01MOT06.DMOV CP MS")
   field (INPG, "MCTMONO01MOT07.DMOV CP MS")
   
   field (CALC, "A && B && C && D && E && F && G")
}

record(bi, "MCTMONO01:MOVING_MONITOR") {
   field (DESC, "Are we moving to energy?")

   field (INP,  "MCTMONO01:MOVING_MONITOR_CALC CP MS")
    
   field (ZNAM, "Stopped") field(ZSV, "NO_ALARM")
   field (ONAM, "Moving")  field(OSV, "MINOR")
}

record (longin, "MCTMONO01:ENERGY_CTRL_SCRIPT_HEARTBEAT") {
   field (DESC, "Energy calc script heartbeat")
   field (SCAN, "Passive")

   field (LOPR, "0")
   field (HOPR, "1000")
}

record (stringin, "MCTMONO01:ENERGY_CTRL_SCRIPT_MESSAGE") {
   field (DESC, "Energy calc script heartbeat")

   field (PINI, "YES")
   field (SCAN, "Passive")

   field (FLNK, "MCTMONO01:MESSAGE_TIMESTAMP")
}

# Timestamp of the lastest error
#
record (stringin, "MCTMONO01:MESSAGE_TIMESTAMP") {
    field (DESC, "Last error timestamp")
    field (DTYP, "Soft Timestamp")
    field (SCAN, "Passive")
    field (INP,"@%F %T")
}

# Request all motion to stop
#
record (bo, "MCTMONO01:STOP_ALL_MOTION_CMD") {
   field (SCAN, "Passive")
   field (PINI, "YES")

   field (ZNAM, "Do nothing")     field (ZSV, "NO_ALARM")
   field (ONAM, "Stop")           field (OSV, "MINOR")

   field (HIGH, "1")

   field (FLNK,  "MCTMONO01:STOP_ALL_MOTION")
}

# Distribute the stop request
#
record (dfanout, "MCTMONO01:STOP_ALL_MOTION") {

   field (DESC, "")
   field (SCAN, "Passive")

   field (VAL, "1")

   # OMSL options:
   #  - closed_loop: output value retrieved from PV defined in DOL field
   #  - supervisory: output value retrieved from the VAL field
   #
   field (OMSL, "supervisory")
   
   field (SELM, "All")          

   field (OUTA, "MCTMONO01MOT01.STOP PP")
   field (OUTB, "MCTMONO01MOT02.STOP PP")
   field (OUTC, "MCTMONO01MOT03.STOP PP")
   field (OUTD, "MCTMONO01MOT04.STOP PP")
   field (OUTE, "MCTMONO01MOT05.STOP PP")
   field (OUTF, "MCTMONO01MOT06.STOP PP")
   field (OUTG, "MCTMONO01MOT07.STOP PP")
}

# end
